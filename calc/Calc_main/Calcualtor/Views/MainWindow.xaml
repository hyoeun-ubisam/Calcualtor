<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CalculatorApp.ViewModel"
        Title="계산기" Height="500" Width="350"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:CalculatorViewModel/>
    </Window.DataContext>

    <Grid Background="#FFFFFF" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="RecordTextBox"
             Grid.Row="0"
             Height="20"
             FontSize="14"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Center"
             TextAlignment="Right"
             Margin="0"
             IsReadOnly="True"
             Background="LightSlateGray"
             Foreground="White"
             BorderThickness="0"
             Text="{Binding RecordText}"/>


        <TextBox x:Name="ResultTextBox"
                 Grid.Row="1"
                 Height="50"
                 FontSize="24"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 TextAlignment="Right"
                 Margin="0 0 0 10"
                 IsReadOnly="True"
                 Background="LightSlateGray"
                 Foreground="White"
                 BorderThickness="0"
                 Text="{Binding ResultText}"/>

        <UniformGrid x:Name ="ButtonGrid" Grid.Row="2" Columns="0" Rows="5" Margin="0">
            <UniformGrid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="Command" Value="{Binding ButtonClickCommand}"/>
                    <Setter Property="CommandParameter" Value="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                </Style>
            </UniformGrid.Resources>

            <Button Content="C"/>
            <Button Content="%"/>
            <Button Content="÷"/>
            <Button Content="←"/>

            <Button Content="7" />
            <Button Content="8" />
            <Button Content="9" />
            <Button Content="×" />

            <Button Content="4" />
            <Button Content="5" />
            <Button Content="6" />
            <Button Content="-" />

            <Button Content="1" />
            <Button Content="2" />
            <Button Content="3" />
            <Button Content="+" />

            <Button Content="±" />
            <Button Content="0" />
            <Button Content="." />
            <Button Content="=" />
        </UniformGrid>

        <Button Content="setting" 
                Grid.Row="3" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,15,0,0" 
                Padding="8,3"
                FontSize="16"
                Click="SettingsButton_Click"
                ToolTip="설정" />
    </Grid>
</Window>