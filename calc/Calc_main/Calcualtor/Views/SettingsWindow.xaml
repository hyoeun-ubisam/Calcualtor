<Window x:Class="Calculator.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="150" Width="400"
        MinHeight="200" MinWidth="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="서버 주소:" />
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                 Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,2,0,0" />

        <Label Grid.Row="1" Grid.Column="0" Content="포트:" />
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                 Text="{Binding ServerPort, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,2,0,0" />

        <Label Grid.Row="2" Grid.Column="0" Content="토큰(선택):" />
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                 Text="{Binding Token, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,2,0,0" />

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="저장" Command="{Binding SaveCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                    IsDefault="True" MinWidth="80" Margin="0,0,8,0"/>
            <Button Content="취소" IsCancel="True" MinWidth="80" />
        </StackPanel>
    </Grid>
</Window>